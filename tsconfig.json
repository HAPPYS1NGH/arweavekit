{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist/",
    "strict": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "__tests__/*",
    "dist/"
  ]
}