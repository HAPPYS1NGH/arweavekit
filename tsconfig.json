{
  "compilerOptions": {
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": true,
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist/",
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "#utils": ["src/utils.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "__tests__/*", "dist/"]
}
