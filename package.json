{
  "name": "permawebjs",
  "version": "1.0.0",
  "description": "Deploy Full Stack permaweb apps in as few clicks and little deep library knowledge as possible",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "test": "jest",
    "prettier": "prettier --write src/*.ts",
    "arlocal:run": "npx arlocal",
    "test:wallets": "jest --testPathPattern=wallet.spec.ts",
    "test:transactions": "jest --testPathPattern=transactions",
    "test:contracts:create": "jest --testPathPattern=contract/create.spec.ts",
    "test:contracts:read": "jest --testPathPattern=contract/read.spec.ts",
    "test:contracts:write": "jest --testPathPattern=contract/write.spec.ts",
    "build": "rollup -c",
    "watch": "webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/labscommunity/permawebjs.git"
  },
  "author": "CommunityLabs",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/labscommunity/permawebjs/issues"
  },
  "homepage": "https://github.com/labscommunity/permawebjs#readme",
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "arlocal": "^1.1.59",
    "husky": "^8.0.3",
    "install": "^0.13.0",
    "jest": "^29.3.1",
    "jest-cli": "^29.3.1",
    "lint-staged": "^13.1.0",
    "npm": "^9.1.3",
    "prettier": "^2.8.3",
    "rollup": "^3.6.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@bundlr-network/client": "^0.9.11",
    "@types/human-crypto-keys": "^0.1.0",
    "arweave": "^1.11.8",
    "arweave-mnemonic-keys": "^0.0.9",
    "concurrently": "^7.6.0",
    "lodash": "^4.17.21",
    "warp-contracts": "^1.2.42"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "**/*.spec.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --write 'src/*.ts' && git add ."
    }
  },
  "lint-staged": {
    "src/*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
