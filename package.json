{
  "name": "permawebjs",
  "version": "1.0.0",
  "description": "Utility library to build full stack permaweb applications",
  "main": "dist/index.js",
  "private": false,
  "type": "module",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "arlocal:run": "npx arlocal",
    "test": "jest",
    "format": "prettier --write src/*.ts",
    "test:wallet": "jest --testPathPattern=wallet",
    "test:serverless": "jest --testPathPattern=serverless",
    "test:transaction": "jest --testPathPattern=transactions",
    "test:contracts:create": "jest --testPathPattern=contract/create.spec.ts",
    "test:contracts:read": "jest --testPathPattern=contract/read.spec.ts",
    "test:contracts:write": "jest --testPathPattern=contract/write.spec.ts",
    "build": "rollup -c --bundleConfigAsCjs",
    "dev": "rollup -c -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/labscommunity/permawebjs.git"
  },
  "author": "CommunityLabs",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/labscommunity/permawebjs/issues"
  },
  "homepage": "https://github.com/labscommunity/permawebjs#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/human-crypto-keys": "^0.1.0",
    "@types/jest": "^29.2.4",
    "arlocal": "^1.1.59",
    "husky": "^8.0.3",
    "install": "^0.13.0",
    "jest": "^29.3.1",
    "jest-cli": "^29.3.1",
    "lint-staged": "^13.1.0",
    "npm": "^9.1.3",
    "prettier": "^2.8.3",
    "rollup": "^3.6.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "peerDependencies": {
    "@bundlr-network/client": "^0.10.1",
    "@execution-machine/sdk": "^0.1.6",
    "arweave": "^1.12.4",
    "arweave-mnemonic-keys": "^0.0.9",
    "dotenv": "^16.0.3",
    "warp-contracts": "^1.2.49"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "**/*.spec.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --write 'src/*.ts' && git add ."
    }
  },
  "lint-staged": {
    "src/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@bundlr-network/client": "^0.10.1",
    "@execution-machine/sdk": "^0.1.6",
    "arweave": "^1.12.4",
    "arweave-mnemonic-keys": "^0.0.9",
    "dotenv": "^16.0.3",
    "warp-contracts": "^1.2.49"
  }
}
